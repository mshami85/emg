@inject SignInManager<User> signInManager

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="~/">سلامة</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        المستخدمون
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Account", new { id=""})">مستخدمو الويب</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Device", new { id=""})">الأجهزة الذكية</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        التراسل
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Mobile", new { id=""})">رسائل الحالات الواردة</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Admin", new { id=""})">رسائل الإدارة</a></li>
                        <li><div class="dropdown-divider"></div></li>
                        <li><a class="dropdown-item" href="@Url.Action("Chat", "Admin", new { id=""})">محادثة سريعة</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav d-none d-lg-block">
                <li class="nav-item">
                    <a type="button" class="btn btn-outline-secondary position-relative" href="@Url.Action("Index","Mobile",new{@unread=true})">
                        <span class="bi bi-envelope-open" id="event-icon"></span>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger invisible" id="event-counter">0</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav">
                @if (signInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" title="User name" href="#">مرحبا @User.GetName()</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-action="Logout" asp-controller="Account">
                            <button type="submit" class="btn btn btn-outline-light">تسجيل الخروج</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>