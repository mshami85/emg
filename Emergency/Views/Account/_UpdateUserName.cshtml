@model int

<div class="modal fade" id="UpdateUserNameModal" tabindex="-1" aria-labelledby="fullNameModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("UpdateUserName", "Account"))
            {
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="fullNameModalLabel">تغيير الاسم</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="id" value="@Model" />
                    <label class="control-label " for="FullName">الاسم الكامل</label>
                    <div class="col-md-10  mb-2">
                        <input class="form-control text-box single-line" id="FullName" name="FullName" type="text" value="" data-val="true" data-val-required="الحقل مطلوب"/>
                        <span class="field-validation-valid text-danger" data-valmsg-for="FullName" data-valmsg-replace="true"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
                </div>
            }
        </div>
    </div>
</div>
