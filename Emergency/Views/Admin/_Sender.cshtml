@using System.Globalization;
@model ChatMessage
@{
    if (Model == null) return;
    var today = DateTime.Today == Model.SendTime.Date;
    string ago = string.Empty;
    // if (time.TotalMinutes < 1)
    // {
    //     ago = "منذ " + (int)time.TotalSeconds + " ث";
    // }
    // else if (time.TotalHours < 1)
    // {
    //     ago = "منذ " + (int)time.TotalMinutes + " د";
    // }

    if (today)
    {
        ago = Model.SendTime.ToString("T", CultureInfo.GetCultureInfo("ar-SY"));
    }
    else
    {
        ago = Model.SendTime.ToString("g", CultureInfo.GetCultureInfo("ar-SY"));
    }
}
<li class="d-flex justify-content-between mb-2 p-0">
    <img src="@Url.Content("~/images/boss.png")" alt="avatar" class="rounded-circle d-flex align-self-start me-2 shadow-1-strong" width="60">
    <div class="card border-info w-100 p-0 ">
        <div class="card-header d-flex justify-content-between p-0 ps-1 pe-1">
            <span class="fw-bold mb-0">@Model.Sender</span>
            <span class="text-muted small mb-0"><i class="bi bi-clock"></i> @ago @* <button class="btn-close mx-1"></button> *@</span>
            
        </div>
        <div class="card-body  p-0">
            <p class="mb-0 p-1">
                @Model.Message
            </p>
        </div>
    </div>
</li>